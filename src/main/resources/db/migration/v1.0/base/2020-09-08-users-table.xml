<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet id="2020-09-08-users-table" author="bass2000">
        <createTable tableName="users" remarks="Пользователи">
            <column name="id" remarks="Идентификатор ползователя" type="int" autoIncrement="true" startWith="1"
                    incrementBy="1">
                <constraints
                        nullable="false"
                        primaryKey="true"
                        primaryKeyName="users_pkey"
                        unique="true"/>
            </column>
            <column name="name" remarks="Имя" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="description" remarks="Описание" type="varchar(100)">
                <constraints nullable="false"
                             unique="false"/>
            </column>
            <column name="age" remarks="Возраст" type="integer">
                <constraints nullable="false"
                             unique="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>